<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutor_dashboard"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="850dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:padding="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/headlinecentre" />

        <GridLayout
            android:layout_width="405dp"
            android:layout_height="578dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="30dp"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="18dp"
                        android:src="@drawable/tutrprofile" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="Profile"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="18dp"
                        android:src="@drawable/waltdashtchr" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="Wallet"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="18dp"
                        android:src="@drawable/askq" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="Add Question"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="18dp"
                        android:src="@drawable/monitor" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="Results"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="18dp"
                        android:src="@drawable/reffer" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="Refer and Earn"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="18dp"
                        android:src="@drawable/suggestion" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="Suggestion"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>


    </RelativeLayout>


</ScrollView>
